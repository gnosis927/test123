<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.AppAccountDao">

    <resultMap type=".entity.AppAccount" id="AppAccountMap">
        <result property="pId" column="p_ID" jdbcType="INTEGER"/>
        <result property="aName" column="a_Name" jdbcType="VARCHAR"/>
        <result property="aSex" column="a_Sex" jdbcType="VARCHAR"/>
        <result property="aTime" column="a_Time" jdbcType="VARCHAR"/>
        <result property="aLastlogintime" column="a_LastloginTime" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AppAccountMap">
        select
          p_ID, a_Name, a_Sex, a_Time, a_LastloginTime
        from mydatabase.app_account
        where p_ID = #{pId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AppAccountMap">
        select
          p_ID, a_Name, a_Sex, a_Time, a_LastloginTime
        from mydatabase.app_account
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AppAccountMap">
        select
          p_ID, a_Name, a_Sex, a_Time, a_LastloginTime
        from mydatabase.app_account
        <where>
            <if test="pId != null">
                and p_ID = #{pId}
            </if>
            <if test="aName != null and aName != ''">
                and a_Name = #{aName}
            </if>
            <if test="aSex != null and aSex != ''">
                and a_Sex = #{aSex}
            </if>
            <if test="aTime != null and aTime != ''">
                and a_Time = #{aTime}
            </if>
            <if test="aLastlogintime != null and aLastlogintime != ''">
                and a_LastloginTime = #{aLastlogintime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pId" useGeneratedKeys="true">
        insert into mydatabase.app_account(a_Name, a_Sex, a_Time, a_LastloginTime)
        values (#{aName}, #{aSex}, #{aTime}, #{aLastlogintime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mydatabase.app_account
        <set>
            <if test="aName != null and aName != ''">
                a_Name = #{aName},
            </if>
            <if test="aSex != null and aSex != ''">
                a_Sex = #{aSex},
            </if>
            <if test="aTime != null and aTime != ''">
                a_Time = #{aTime},
            </if>
            <if test="aLastlogintime != null and aLastlogintime != ''">
                a_LastloginTime = #{aLastlogintime},
            </if>
        </set>
        where p_ID = #{pId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mydatabase.app_account where p_ID = #{pId}
    </delete>

</mapper>